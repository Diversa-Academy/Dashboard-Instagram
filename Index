    <script>
        // Configuração de cores - Tons de Azul
        const colors = {
            primary: '#002855',      // Azul escuro BTG
            secondary: '#004B87',    // Azul médio
            accent: '#0066A1',       // Azul claro
            success: '#0080C9',      // Azul vibrante
            warning: '#5AA5D8',      // Azul suave
            danger: '#89CFF0'        // Azul bebê
        };

        // --- FUNCIONALIDADES INTERATIVAS ---

        // 1. Tooltip de Hover nos Cards
        const tooltip = document.getElementById('hoverTooltip');

        document.querySelectorAll('.stat-card').forEach(card => {
            card.addEventListener('mouseenter', function(e) {
                const label = this.querySelector('.label').textContent;
                const value = this.querySelector('.value').textContent;
                const detail = this.getAttribute('data-detail') || 'Informações detalhadas sobre esta métrica.';

                tooltip.innerHTML = `
                    <h4>${label}</h4>
                    <p class="tooltip-value">${value}</p>
                    <p>${detail}</p>
                `;
                
                // Posiciona o tooltip
                const cardRect = this.getBoundingClientRect();
                const containerRect = document.querySelector('.container').getBoundingClientRect();
                
                tooltip.style.left = (cardRect.right - containerRect.left + 15) + 'px';
                tooltip.style.top = (cardRect.top - containerRect.top + (cardRect.height / 2) - (tooltip.offsetHeight / 2)) + 'px';
                
                // Torna o tooltip visível
                tooltip.style.opacity = '1';
                tooltip.style.visibility = 'visible';
            });

            card.addEventListener('mouseleave', function() {
                // Esconde o tooltip
                tooltip.style.opacity = '0';
                tooltip.style.visibility = 'hidden';
            });
        });


        // 2. Funcionalidade do Seletor de Período
        document.getElementById('applyFilter').addEventListener('click', function() {
            const month = document.getElementById('monthSelector').options[document.getElementById('monthSelector').selectedIndex].text;
            const year = document.getElementById('yearSelector').value;
            
            // Aqui você faria uma chamada à API para buscar os novos dados
            // Por enquanto, apenas um alerta para demonstração
            alert(`Filtrar dados para: ${month} de ${year}\n\n(Em um sistema real, os gráficos e cards seriam atualizados com os novos dados.)`);
        });


        // --- GRÁFICOS CHART.JS ---

        // Gráfico de Tendência de Seguidores (NOVO)
        new Chart(document.getElementById('followersTrendChart'), {
            type: 'line',
            data: {
                labels: ['Sem 1', 'Sem 2', 'Sem 3', 'Sem 4'],
                datasets: [{
                    label: 'Novos Seguidores',
                    data: [8, 15, 12, 15],
                    borderColor: colors.primary,
                    backgroundColor: 'rgba(0, 40, 85, 0.1)',
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: colors.primary,
                    pointRadius: 5,
                    pointHoverRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 5
                        }
                    }
                }
            }
        });

        // Chart 1: Tipos de Conteúdo
        new Chart(document.getElementById('contentChart'), {
            type: 'doughnut',
            data: {
                labels: ['Notícias Quentes', 'Vídeos de Autoridade', 'Corte de Podcast', 'Vídeo Informativo', 'Vídeo de Ano Novo'],
                datasets: [{
                    data: [3, 2, 1, 1, 1],
                    backgroundColor: [colors.primary, colors.secondary, colors.accent, colors.success, colors.warning]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    }
                }
            }
        });

        // Chart 2: Distribuição de Gênero
        new Chart(document.getElementById('genderChart'), {
            type: 'pie',
            data: {
                labels: ['Homens', 'Mulheres'],
                datasets: [{
                    data: [94.8, 5.2],
                    backgroundColor: [colors.primary, colors.warning]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label + ': ' + context.parsed + '%';
                            }
                        }
                    }
                }
            }
        });

        // Chart 3: Faixa Etária
        new Chart(document.getElementById('ageChart'), {
            type: 'bar',
            data: {
                labels: ['18-24', '25-34', '35-44', '45-54', '55+'],
                datasets: [{
                    label: 'Porcentagem do Público',
                    data: [15, 60, 15, 7, 3],
                    backgroundColor: colors.primary,
                    borderRadius: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { callback: value => value + '%' }
                    }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });

        // Chart 4: Top Cidades
        new Chart(document.getElementById('citiesChart'), {
            type: 'bar',
            data: {
                labels: ['São Paulo', 'Curitiba', 'Maringá', 'Porto Alegre'],
                datasets: [{
                    label: 'Porcentagem',
                    data: [4.9, 2.0, 1.9, 1.1],
                    backgroundColor: [colors.primary, colors.secondary, colors.accent, colors.success],
                    borderRadius: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: { callback: value => value + '%' }
                    }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });

        // Chart 5: Origem das Visualizações
        new Chart(document.getElementById('viewsOriginChart'), {
            type: 'doughnut',
            data: {
                labels: ['Reels', 'Stories', 'Outros'],
                datasets: [{
                    data: [72.8, 19.3, 7.9],
                    backgroundColor: [colors.primary, colors.accent, '#e0e0e0']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label + ': ' + context.parsed + '%';
                            }
                        }
                    }
                }
            }
        });

        // Chart 6: Distribuição Geográfica
        new Chart(document.getElementById('geoChart'), {
            type: 'pie',
            data: {
                labels: ['Brasil', 'Portugal', 'Estados Unidos'],
                datasets: [{
                    data: [99.7, 0.2, 0.1],
                    backgroundColor: [colors.success, colors.warning, colors.danger]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label + ': ' + context.parsed + '%';
                            }
                        }
                    }
                }
            }
        });

        // Chart 7: Performance de Impulsionamento
        new Chart(document.getElementById('boostChart'), {
            type: 'bar',
            data: {
                labels: ['Visitas\nImpulsionadas', 'Quiz\nIniciados', 'Quiz\nConcluídos'],
                datasets: [{
                    label: 'Quantidade',
                    data: [120000, 14, 14],
                    backgroundColor: [colors.accent, colors.success, colors.primary],
                    borderRadius: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        type: 'logarithmic',
                        ticks: {
                            callback: function(value, index, values) {
                                if (value === 10 || value === 100 || value === 1000 || value === 10000 || value === 100000) {
                                    return value.toLocaleString('pt-BR');
                                }
                                return null;
                            }
                        }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += context.parsed.y.toLocaleString('pt-BR');
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

        // Chart 8: Funil de Conversão do Quiz
        new Chart(document.getElementById('quizFunnelChart'), {
            type: 'doughnut',
            data: {
                labels: ['Concluídos (100%)', 'Não concluídos (0%)'],
                datasets: [{
                    data: [100, 0],
                    backgroundColor: [colors.success, '#e0e0e0']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 15, font: { size: 12 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label + ' - 14 pessoas';
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>
